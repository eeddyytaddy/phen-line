{
  "$schema": "https://railway.com/railway.schema.json",
  "services": [
    {
      "name": "phen-line",
      "source": ".",
      "dockerfilePath": "Dockerfile",
      "startCommand": "gunicorn app:app"
    },
    {
      "name": "locust-runner",
      "source": ".",
      "dockerfilePath": "Dockerfile.locust",
      "startCommand": "sh -c 'locust -f /usr/src/app/tests/locustfile.py --headless -u 50 -r 10 -t 1m --csv=/data/run --csv-full-history --stop-timeout 10'",
      "volumes": [
        {
          "name": "kind-volume",
          "mountPath": "/data"
        }
      ]
    }
  ]
}
